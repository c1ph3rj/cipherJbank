<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/gradient1"
    style="@style/Theme.AppCompat.Light"
    android:layout_height="match_parent"
    tools:context=".credit_history">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="500dp"
        android:background="@drawable/user_login_layout_background">

        <ListView
            android:layout_width="318dp"
            android:layout_height="498dp"
            android:scrollbars="none"
            android:background="@drawable/gradient2"
            android:backgroundTint="#514E4E"
            android:id="@+id/credit_List"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/Heading_For_CreditPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Indigo"
        android:textSize="28sp"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:paddingStart="50dp"
        android:fontFamily="@font/fig_tree_bold"
        android:text="@string/transactions_credits_text"
        tools:ignore="RtlSymmetry" />

</FrameLayout>