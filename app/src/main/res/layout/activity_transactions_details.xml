<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/transactionPage"
    tools:context=".TransactionsDetails">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomNavTransactions"
        style="@style/Widget.MaterialComponents.BottomNavigationView"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:background="@drawable/bottom_nav_bar_background"
        android:elevation="4dp"
        app:itemIconTint="@drawable/bottom_navbar_item_background"
        app:itemRippleColor="@color/Indigo"
        app:itemTextColor="@color/Blue"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:menu="@menu/transactions_nav" />
</androidx.constraintlayout.widget.ConstraintLayout>